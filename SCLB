# 01c 28sep82 th  added definitions for line segment things
# 01b 13jul82 th  added keypad and attribute definitions

# Maximum size of the screen.  Used by dslb.
define(MAXSCLINS,40)
define(MAXSCCOLS,80)

define(CANT,5000)  # This value is given as the character-cost of functions
                   # which a terminal can't perform.

# keypad definitions
