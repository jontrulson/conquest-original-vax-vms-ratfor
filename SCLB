define(KEYPAD_7,8)
define(KEYPAD_8,9)
define(KEYPAD_9,10)
define(KEYPAD_F0,11)
define(KEYPAD_F1,12)
define(KEYPAD_F2,13)
define(KEYPAD_F3,14)
define(KEYPAD_F4,15)
define(KEYPAD_F5,16)
define(KEYPAD_F6,17)
define(KEYPAD_F7,18)
define(KEYPAD_F8,19)
define(KEYPAD_F9,20)
define(KEYPAD_UP,21)
define(KEYPAD_LEFT,22)
define(KEYPAD_DOWN,23)
define(KEYPAD_RIGHT,24)
define(KEYPAD_PERIOD,25)
define(KEYPAD_COMMA,26)
define(KEYPAD_MINUS,27)
define(KEYPAD_ENTER,28)
define(MAX_KEYPAD_KEYS,28)

# special graphics characters
