define(LSEG_UL,6)
define(LSEG_ULD,7)
define(LSEG_R,8)
define(LSEG_RD,9)
define(LSEG_RL,10)
define(LSEG_RLD,11)
define(LSEG_RU,12)
define(LSEG_RUD,13)
define(LSEG_RUL,14)
define(LSEG_RULD,15)
define(GRAPHICS_PILLOW,16)

# attribute definitions
define(ATTRIBUTE_STRING,"hurbga")
define(ATTRIBUTE_HIGHLIGHT,1)		# h
define(ATTRIBUTE_UNDERLINE,2)		# u
define(ATTRIBUTE_REVERSE,3)		# r
define(ATTRIBUTE_BLINK,4)		# b
define(ATTRIBUTE_GRAPHICS,5)		# g
define(ATTRIBUTE_ALTERNATE,6)		# a
